{
  "manifest_version": 3,
  "name": "AI Contrast Assistant",
  "version": "1.0",
  "description": "Automatically detects and fixes low-contrast text for better accessibility.",
  "permissions": ["activeTab", "scripting", "storage", "tabs"],
  "host_permissions": ["http://127.0.0.1:5000/*", "http://localhost:5000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
